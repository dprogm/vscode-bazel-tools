{
    "name": "vscode-bazel-tools",
    "displayName": "Bazel Tools",
    "description": "Bazel integration for Visual Studio Code",
    "version": "0.0.1",
    "publisher": "dprogm",
    "repository": {
        "type": "git",
        "url": "https://github.com/dprogm/vscode-bazel-tools.git"
    },
    "license": "MIT",
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "img/bzl_icon_128.png",
    "activationEvents": [
        "onCommand:bazel.buildTarget",
        "onCommand:bazel.runTarget",
        "onCommand:bazel.createCppProps"
    ],
    "main": "./src/extension",
    "contributes": {
        "commands": [
            {
                "command": "bazel.buildTarget",
                "title": "Build",
                "category": "Bazel"
            },
            {
                "command": "bazel.runTarget",
                "title": "Run",
                "category": "Bazel"
            },
            {
                "command": "bazel.createCppProps",
                "title": "Create C++ Properties",
                "category": "Bazel"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Bazel Tools Configuration",
            "properties": {
                "bazel.targetExcludes": {
                    "type": "array",
                    "default": [
                        "filegroup"
                    ],
                    "description": "Target excludes that should not be considered during querying"
                }
            }
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "eslint": "^4.11.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "child-process-async": "^1.0.1",
        "fs-extra": "^5.0.0",
        "node-exec-promise": "^1.0.2"
    }
}
